generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int         @id @default(autoincrement())
  name            String
  messages        Message[]     
}

model Message {
  id              Int         @id @default(autoincrement())
  sentUserId      Int
  receiverUserId  Int
  sentBy          User        @relation(fields: [sentUserId], references: [id]) // get clarification on error referencing the relationship issue
  receivedBy      User        @relation(fields: [receiverUserId], references: [id]) // get clarification on error referencing the relationship issue
}
